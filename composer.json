{
    "name": "buddywinangun/codeigniter-xtend",
    "description": "CodeIgniter Xtend for ease of use",
    "keywords": [
        "CodeIgniter",
        "Xtend"
    ],
    "type": "library",
    "homepage": "https://github.com/buddywinangun/codeigniter-xtend",
    "license": "MIT",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Xtend\\": "src/"
        }
    },
    "authors": [{
        "name": "buddywinangun",
        "email": "buddywinangun@gmail.com"
    }],
    "require": {
        "php": "^7.0",
        "twig/twig": "^3.8",
        "codeigniter/framework": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "codedungeon/phpunit-result-printer": "^0.32.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "Xtend\\ComposerScripts::run"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ]
    },
    "support": {
        "source": "https://github.com/buddywinangun/codeIgniter-xtend"
    }
}
