{
    "type": "library",
    "name": "buddywinangun/codeigniter-xtend",
    "description": "A collection of beautiful full-stack components for CodeIgniter. The perfect starting point for your next app.",
    "keywords": [
        "framework",
        "codeigniter"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "buddywinangun",
            "email": "buddywinangun@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0|^8.0",
        "codeigniter/framework": "~3.1",
        "firebase/php-jwt": "^6.10",
        "intervention/image": "^2.7",
        "nette/neon": "^3.4",
        "twig/twig": "^3.8"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.32.0",
        "marcocesarato/php-conventional-changelog": "^1.17",
        "mikey179/vfsstream": "1.1.*",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.9",
        "symplify/monorepo-builder": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "CodeigniterXtend\\Auth\\": "packages/auth/src/",
            "CodeigniterXtend\\Framework\\": "packages/framework/src/",
            "CodeigniterXtend\\Route\\": "packages/route/src/",
            "Xtend\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "3.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "replace": {
        "codeigniter-xtend/auth": "4.0.0",
        "codeigniter-xtend/framework": "4.0.0",
        "codeigniter-xtend/route": "4.0.0",
        "codeigniter-xtend/starter": "4.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
