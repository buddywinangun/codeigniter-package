{
    "type": "library",
    "name": "buddywinangun/codeigniter-xtend",
    "description": "The CodeIgniter Xtend Monorepo",
    "keywords": [
        "framework",
        "codeigniter"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "buddywinangun",
            "email": "buddywinangun@gmail.com"
        }
    ],
    "require": {
        "codeigniter/framework": "~3.1",
        "firebase/php-jwt": "^6.10",
        "intervention/image": "^2.7",
        "nette/neon": "^3.4",
        "php": "^7.0|^8.0",
        "twig/twig": "^3.8"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.32.0",
        "mikey179/vfsstream": "1.1.*",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.9",
        "symplify/monorepo-builder": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "CodeigniterXtend\\Auth\\": "packages/auth/src/",
            "CodeigniterXtend\\Framework\\": "packages/framework/src/",
            "Xtend\\": "src/"
        }
    },
    "replace": {
        "buddywinangun/codeigniter-xtend-appstarter": "self.version",
        "buddywinangun/codeigniter-xtend-auth": "self.version",
        "buddywinangun/codeigniter-xtend-framework": "self.version"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
